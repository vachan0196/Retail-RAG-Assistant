# --- API Keys ---
OPENAI_API_KEY=your_OpenAI_key_here     # optional, only if you want OpenAI generation
COHERE_API_KEY=your_cohere_key_here     # Cohere free tier works well

# --- Data directories ---
DOCS_DIR=/app/docs                      # location of knowledge base docs
HF_CACHE_DIR=/app/artifacts/models      # Hugging Face cache directory (models saved here)

# --- Model configs ---
USE_OPENAI=false
USE_COHERE=true
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
TOP_K=8
RERANK_TOP_K=5

# --- Vector DB (optional: for production) ---
PINECONE_API_KEY=your_key_here
PINECONE_INDEX=retail-rag
WEAVIATE_URL=your_url_here
WEAVIATE_API_KEY=your_key_here
